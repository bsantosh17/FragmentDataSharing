<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FragmentDataSharing" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NavigationTextSelected">
        <item name="android:textColor">#FF0000</item> <!-- Selected color -->
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text appearance for unselected item -->
    <style name="NavigationTextUnselected">
        <item name="android:textColor">#808080</item> <!-- Unselected color -->
        <item name="android:textStyle">normal</item>
    </style>
</resources>